                    android:id="@+id/waitlistBar"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/royalBlue"
                    android:visibility="gone"/>

                <!-- Lottery Capacity -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Lottery Capacity"
                    android:fontFamily="@font/dmsans_medium"
                    android:textColor="@color/royalBlue"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/lotteryCapacity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp"
                    android:text="10"
                    android:background="@null"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/dmsans_regular"
                    android:layout_gravity="start" />

                <EditText
                    android:id="@+id/editLotteryCapacity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp"
                    android:hint="e.g  10"
                    android:background="@null"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/dmsans_regular"
                    android:layout_gravity="start"
                    android:visibility="gone" />

                <View
                    android:id="@+id/lotteryBar"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/royalBlue"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/listButtons"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/waitinglistButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:focusable="true" >

                        <ImageButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@android:color/white"
                            android:contentDescription="blue_home"
                            android:src="@drawable/ic_waitlist_people"
                            android:clickable="false"
                            android:focusable="false"
                            app:tint="@color/royalBlue"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_regular"
                            android:gravity="center_horizontal"
                            android:text="Waitlist"
                            android:textSize="13sp"
                            android:textColor="@color/royalBlue"
                            android:clickable="false"
                            android:focusable="false"/>

                    </LinearLayout>

