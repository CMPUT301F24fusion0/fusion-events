<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <!-- Title Section -->
    <TextView
        android:id="@+id/adminFeaturesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Features"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:fontFamily="@font/raleway_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Container for Buttons -->
    <LinearLayout
        android:id="@+id/adminFeaturesContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rect_background"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adminFeaturesTitle"
        android:layout_marginTop="16dp">

        <!-- Browse Events Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_browse_events"
                app:tint="@color/textColor" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/browseEventsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse Events"
                android:fontFamily="@font/raleway_semibold"
                android:textSize="17sp"
                android:textColor="@color/textColor" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColor"
            android:layout_marginVertical="5dp" />

        <!-- Browse Profiles Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_browse_profiles"
                app:tint="@color/textColor" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/browseProfilesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse Profiles"
                android:fontFamily="@font/raleway_semibold"
                android:textSize="17sp"
                android:textColor="@color/textColor" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColor"
            android:layout_marginVertical="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_browse_facilities"
                app:tint="@color/textColor" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/browseFacilitiesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse Facilities"
                android:fontFamily="@font/raleway_semibold"
                android:textSize="17sp"
                android:textColor="@color/textColor" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/white"
        android:clipToPadding="false"
        android:fitsSystemWindows="false"
        android:orientation="horizontal"
        android:paddingBottom="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/toolbar_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true" >

            <ImageButton
                android:id="@+id/toolbar_home_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:contentDescription="blue_home"
                android:src="@drawable/ic_home_outline"
                android:clickable="false"
                android:focusable="false"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/homeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center_horizontal"
                android:text="Home"
                android:textSize="11.5sp"
                android:clickable="false"
                android:focusable="false"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/toolbar_qrscanner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageButton
                android:id="@+id/toolbar_qrscanner_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:contentDescription="blue_home"
                android:src="@drawable/ic_qr_code"
                android:clickable="false"
                android:focusable="false"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/qrTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center_horizontal"
                android:text="Scan QR"
                android:textSize="11.5sp"
                android:clickable="false"
                android:focusable="false"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/toolbar_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageButton
                android:id="@+id/toolbar_add_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:contentDescription="blue_home"
                android:src="@drawable/ic_add"
                android:clickable="false"
                android:focusable="false"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/addTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center_horizontal"
                android:text="Add Event"
                android:textSize="11.5sp"
                android:clickable="false"
                android:focusable="false"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/toolbar_favourite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageButton
                android:id="@+id/toolbar_favourite_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:contentDescription="blue_home"
                android:src="@drawable/ic_activity_outline"
                android:clickable="false"
                android:focusable="false"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/searchTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center_horizontal"
                android:text="Activities"
                android:textSize="11.5sp"
                android:clickable="false"
                android:focusable="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/toolbar_person"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageButton
                android:id="@+id/toolbar_person_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:contentDescription="blue_home"
                android:src="@drawable/ic_profile_filled"
                android:clickable="false"
                android:focusable="false" />

            <Space
                android:layout_width="0dp"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/profileTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center_horizontal"
                android:text="Profile"
                android:textSize="11.5sp"
                android:clickable="false"
                android:focusable="false" />

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
