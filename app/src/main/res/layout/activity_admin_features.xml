<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <!-- Title Section -->
    <TextView
        android:id="@+id/adminFeaturesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Features"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:fontFamily="@font/raleway_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Container for Buttons -->
    <LinearLayout
        android:id="@+id/adminFeaturesContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rect_background"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adminFeaturesTitle"
        android:layout_marginTop="16dp">

        <!-- Browse Events Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_browse_events"
                app:tint="@color/textColor" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/browseEventsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse Events"
                android:fontFamily="@font/raleway_semibold"
                android:textSize="17sp"
                android:textColor="@color/textColor" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColor"
            android:layout_marginVertical="5dp" />

        <!-- Browse Profiles Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_browse_profiles"
                app:tint="@color/textColor" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/browseProfilesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse Profiles"
                android:fontFamily="@font/raleway_semibold"
                android:textSize="17sp"
                android:textColor="@color/textColor" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColor"
            android:layout_marginVertical="5dp" />

        <!-- Browse Images Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_browse_facilities"
                app:tint="@color/textColor" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/browseFacilitiesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse Images"
                android:fontFamily="@font/raleway_semibold"
                android:textSize="17sp"
                android:textColor="@color/textColor" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/toolbar_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:contentDescription="home"
            android:src="@drawable/ic_grey_home" />

        <ImageButton
            android:id="@+id/toolbar_camera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:contentDescription="search"
            android:src="@drawable/ic_grey_qrscanner" />


        <ImageButton
            android:id="@+id/toolbar_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:contentDescription="add"
            android:src="@drawable/ic_grey_add" />

        <ImageButton
            android:id="@+id/toolbar_favourite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:contentDescription="favourite"
            android:src="@drawable/ic_grey_favourite" />

        <ImageButton
            android:id="@+id/toolbar_person"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:contentDescription="person"
            android:src="@drawable/ic_blue_person" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
