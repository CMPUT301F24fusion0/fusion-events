<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">


    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/backButton"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">


            <!-- Event Name Section -->
            <TextView
                android:id="@+id/EventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:fontFamily="sans-serif"
                android:textColor="@color/figmaBlue"
                android:textFontWeight="600"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editEventName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:hint="Enter Event Name"
                android:inputType="text"
                android:background="@drawable/custom_input"
                android:drawablePadding="12dp"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:fontFamily="sans-serif"
                android:textColor="@color/figmaBlue"
                android:textFontWeight="600"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Description"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"
                android:hint="Enter Event Description"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:background="@drawable/custom_input"
                android:drawablePadding="12dp"
                android:padding="12dp"
                android:gravity="top|start" />

            <!-- Facility Selection Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facility"
                android:fontFamily="sans-serif"
                android:textColor="@color/figmaBlue"
                android:textFontWeight="600"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_facilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Poster"
                android:fontFamily="sans-serif"
                android:textColor="@color/figmaBlue"
                android:textFontWeight="600"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/uploaded_image_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:contentDescription="Uploaded Event Poster" />

            <Button
                android:id="@+id/upload_image_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Image"
                android:backgroundTint="@color/figmaBlue"
                app:cornerRadius="5dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Date"
                android:fontFamily="sans-serif"
                android:textColor="@color/figmaBlue"
                android:textFontWeight="600"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="16dp">

                <!-- Start Date Selection -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="16dp">

                    <TextView
                        android:id="@+id/start_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Date"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/figmaBlue"
                        android:textFontWeight="600"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/start_date_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Start Date"
                        android:backgroundTint="@color/figmaBlue"
                        app:cornerRadius="5dp" />
                </LinearLayout>

                <!-- End Date Selection -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/end_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Date"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/figmaBlue"
                        android:textFontWeight="600"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/end_date_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select End Date"
                        android:backgroundTint="@color/figmaBlue"
                        app:cornerRadius="5dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Event Capacity Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity"
                android:fontFamily="sans-serif"
                android:textColor="@color/figmaBlue"
                android:textFontWeight="600"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Capacity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter Event Capacity"
                android:inputType="number"
                android:background="@drawable/custom_input"
                android:padding="12dp" />

            <ImageView
                android:id="@+id/qrImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="QR Code" />

            <TextView
                android:id="@+id/entrantsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrants"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:paddingTop="16dp" />

            <ListView
                android:id="@+id/entrantsListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="0.5dp" />

            <TextView
                android:id="@+id/chosenEntrantsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chosen Entrants"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:paddingTop="16dp" />

            <ListView
                android:id="@+id/chosenEntrantsListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="0.5dp" />

            <TextView
                android:id="@+id/cancelledEntrantsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelled Entrants"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:paddingTop="16dp" />

            <ListView
                android:id="@+id/cancelledEntrantsListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="0.5dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/toolbar"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/white"
        android:visibility="gone">

        <Button
            android:id="@+id/join_button"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Join"
            android:textColor="@color/white"
            android:backgroundTint="@color/figmaBlue"
            app:cornerRadius="5dp"
            android:visibility="gone">
        </Button>

        <Button
            android:id="@+id/edit_button"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Edit"
            android:textColor="@color/white"
            android:backgroundTint="@color/figmaBlue"
            app:cornerRadius="5dp">
        </Button>
        <Button
            android:id="@+id/save_button"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Save"
            android:backgroundTint="@color/figmaBlue"
            android:visibility="gone"
            app:cornerRadius="5dp"/>

        <Button
            android:id="@+id/delete_button"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Delete"
            android:textColor="@color/figmaBlue"
            android:backgroundTint="@color/white"
            app:cornerRadius="5dp">
        </Button>

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Cancel"
            android:textColor="@color/figmaBlue"
            android:backgroundTint="@color/white"
            app:cornerRadius="5dp"
            android:visibility="gone">
        </Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
